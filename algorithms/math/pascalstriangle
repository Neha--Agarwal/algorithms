from __future__ import print_function
def printPascal(n):	
	for line in range(1,n+1):  
	    # used to represent C(line, i)
	    C = 1  
	    for i in range(1,line+1):
	    # The first value in a line is always 1    
	    	print( C , end=" ")  
	    	C = C * (line - i) / i  
	    print("\n")
printPascal(4)
